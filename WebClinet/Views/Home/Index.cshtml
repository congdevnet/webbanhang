@section scripts {
    <script type="text/javascript">
        function savepro(id) {
            debugger;
            $.ajax({
                url: '@Url.Action("OrderCheck", "Order")',
                dataType: "json",
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify({ id: id }),
                async: true,
                processData: false,
                cache: false,
                success: function (data) {
                    debugger;
                    if (data.code == 200) {
                        console.log(data.Data);
                        $("#conutcart").html(data.Data);
                    }
                },
                error: function (xhr) {
                    alert(xhr);
                }
            });
        }
    </script>

